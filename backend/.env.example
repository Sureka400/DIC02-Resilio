# Email (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# File Upload (optional)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760